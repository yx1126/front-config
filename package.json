{
    "name": "front-config",
    "version": "1.0.3",
    "private": true,
    "description": "yx1126's Eslint config",
    "keywords": [
        "lint",
        "eslint",
        "eslint-config"
    ],
    "license": "MIT",
    "author": "yx1126",
    "homepage": "https://github.com/yx1126/front-config#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/yx1126/front-config.git"
    },
    "bugs": {
        "url": "https://github.com/yx1126/front-config/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "build": "pnpm run --filter=\"./packages/*\" build",
        "build:eslint": "pnpm run -C packages/eslint-config build",
        "build:style": "pnpm run -C packages/stylelint-config build",
        "inspector": "npx @eslint/config-inspector@latest",
        "release:build": "pnpm build && pnpm -r publish",
        "release": "pnpm -r publish"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/node": "^20.14.10",
        "@yx1126/eslint-config": "workspace:*",
        "@yx1126/stylelint-config": "workspace:*",
        "eslint": "^9.14.0",
        "rollup": "^4.18.0",
        "rollup-plugin-dts": "^6.1.1",
        "stylelint": "^16.10.0",
        "typescript": "^5.5.2"
    }
}

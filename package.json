{
    "name": "@reallyx/front-config",
    "type": "module",
    "version": "0.0.9",
    "description": "yx1126's Front config",
    "keywords": [
        "lint",
        "eslint",
        "eslint-config",
        "style",
        "stylelint",
        "stylelint-config"
    ],
    "license": "MIT",
    "author": "yx1126",
    "files": ["dist"],
    "types": "./dist/index.d.ts",
    "main": "./dist/index.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "homepage": "https://github.com/yx1126/front-config#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/yx1126/front-config.git"
    },
    "bugs": {
        "url": "https://github.com/yx1126/front-config/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "eslint": "eslint .",
        "eslint:fix": "eslint . --fix",
        "eslint:config": "npx @eslint/config-inspector@latest",
        "stylelint": "stylelint \"**/*.{css,scss}\"",
        "stylelint:fix": "stylelint \"**/*.{css,scss}\" --fix",
        "lint": "",
        "lint:fix": "",
        "build": "rollup -c",
        "inspector": "npx @eslint/config-inspector@latest",
        "release:build": "pnpm build && pnpm publish",
        "release": "pnpm publish"
    },
    "dependencies": {
        "@stylistic/eslint-plugin": "^2.10.1",
        "@typescript-eslint/parser": "^8.14.0",
        "eslint-define-config": "^2.1.0",
        "eslint-merge-processors": "^0.1.0",
        "eslint-plugin-jsonc": "^2.18.1",
        "eslint-plugin-vue": "^9.31.0",
        "eslint-plugin-yml": "^1.15.0",
        "eslint-processor-vue-blocks": "^0.1.2",
        "globals": "^15.12.0",
        "local-pkg": "^0.5.0",
        "postcss-scss": "^4.0.9",
        "stylelint-scss": "^6.9.0",
        "typescript-eslint": "^8.14.0"
    },
    "devDependencies": {
        "@reallyx/front-config": "^0.0.9",
        "@rollup/plugin-commonjs": "^26.0.3",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.3.0",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/eslint": "^8.56.12",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^20.17.6",
        "eslint": "^9.14.0",
        "fs-extra": "^11.2.0",
        "rollup": "^4.25.0",
        "rollup-plugin-dts": "^6.1.1",
        "stylelint": "^16.10.0",
        "typescript": "^5.6.3"
    }
}